<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.trainingapp.tuneTraining.podhodFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" >
        <action
            android:id="@+id/action_blankFragment_to_countFragment"
            app:destination="@id/countFragment" />
    </fragment>
    <fragment
        android:id="@+id/countFragment"
        android:name="com.example.trainingapp.tuneTraining.CountFragment"
        android:label="fragment_count"
        tools:layout="@layout/fragment_count" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.trainingapp.mainFragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_nameTrainingFragment"
            app:destination="@id/nameTrainingFragment" />
    </fragment>
    <fragment
        android:id="@+id/nameTrainingFragment"
        android:name="com.example.trainingapp.createTraining.NameTrainingFragment"
        android:label="fragment_name_training"
        tools:layout="@layout/fragment_name_training" >
        <action
            android:id="@+id/action_nameTrainingFragment_to_exerciseListFragment"
            app:destination="@id/exerciseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/exerciseListFragment"
        android:name="com.example.trainingapp.createTraining.ExerciseListFragment"
        android:label="ExerciseListFragment" />
</navigation>